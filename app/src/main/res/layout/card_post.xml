<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgMap"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="地圖縮圖"
        android:scaleType="centerCrop"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/mapNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="地圖名"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imgMap"
        app:layout_constraintTop_toTopOf="@id/imgMap"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/mapTypeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="類型"
        app:layout_constraintStart_toStartOf="@id/mapNameText"
        app:layout_constraintTop_toBottomOf="@id/mapNameText" />

    <TextView
        android:id="@+id/userNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="使用者"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/mapTypeText"
        app:layout_constraintTop_toBottomOf="@id/mapTypeText" />

    <TextView
        android:id="@+id/userLabelText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="個人化標籤"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/userNameText"
        app:layout_constraintTop_toBottomOf="@id/userNameText" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_delete"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
