<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 讓 ImageView 能套成圓形 -->
    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Chip 的統一樣式 -->
    <style name="ChipStyle.Label" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeColor">@color/chip_outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipBackgroundColor">@color/surface_soft</item>
        <item name="chipIconVisible">false</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <!-- 自訂藍色按鈕 -->
    <style name="BlueButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#B8DAE3</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Bottom nav active indicator -->
    <style name="BottomNav.ActiveIndicator" parent="">
        <item name="android:width">52dp</item>
        <item name="android:height">28dp</item>
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
        <item name="android:color">@color/main_primary</item>
    </style>

</resources>
