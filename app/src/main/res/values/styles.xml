<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 讓 ImageView 能套成圓形 -->
    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Chip 的統一樣式 -->
    <style name="ChipStyle.Label" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipStrokeColor">?attr/colorOutline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipIconVisible">false</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <!-- 自訂藍色按鈕 -->
    <style name="BlueButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#B8DAE3</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">24dp</item>
    </style>

</resources>